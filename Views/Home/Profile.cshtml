@{
}
@model Karverket.Models.User

@{
    Layout = "_Layout";
}

@Html.Partial("_Navbar")


<!-- Selve siden -->

<div class="innmelding-container">
    <a href="/" class="tilbake-link">Gå tilbake</a>

    <h1 class="innmelding-title">Profil</h1>
    <!-- Dynamisk farge brukes her basert på feedbackColor -->

    <div class="innmelding-boks">
        <div class="innmelding-details">
            <strong>Fornavn:</strong>
            <p>@Model.Name</p>
            <strong>Etternavn:</strong>
            <p>@Model.SurName</p>
            <strong>E-post:</strong>
            <p>@Model.Email</p>
            <!-- strong>Fylke:</strong>
            <p>Agder</p> -->
        </div>

        <a href="/Home/inbox">
            <button class="kart-knapp">Se mine innmeldinger</button>
            <a asp-action="Logout" class="logout-link @(ViewContext.RouteData.Values["action"].ToString() == "Logout" ? "active-link" : "")">Logg ut </a>
        </a>
    </div>
</div>
